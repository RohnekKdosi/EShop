@page
@model EShop.SignInModel
@{
    ViewData["Title"] = "SignIn";
}

<h1>Přihlášení</h1>
@if (!String.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}
@if (!String.IsNullOrEmpty(Model.FailureMessage))
{
    <div class="alert alert-danger">@Model.FailureMessage</div>
}
<form class="border bg-light rounded p-3" asp-route-returnUrl="@Model.Input.ReturnUrl">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign In</button>
</form>
